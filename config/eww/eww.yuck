
;;================================== Main ====================================================================================================================================================

(include './polls.yuck')
(include './variables.yuck')
(include './widgets.yuck')

;;================================Instructions for Changing theme ========================================================================================================================================================================================================================

;; You have to preserve the eww.scss in $HOME/.config/eww directory, and copy the wanted theme from themes to eww.scss (rename and move it)

;;================================Define Windows================================================================================================================================================================================================================================

(defwindow neofetch
           :monitor 0
           :geometry (geometry :x "10px"
                               :y "50px"
                               :width "300px"
                               :height "450px"
                               :anchor "top left")
           :stacking "fg"
           :reserve (struts :distance "40px" :side "top")
           :windowtype "desktop"
           :wm-ignore false
           (label :text "${neofetch}"
                  :style "color:skyblue;font-family:monospace;font-size:15px;font-weight:bold;padding:20px;border-bottom:5px solid purple;background:linear-gradient(135deg, rgba(100, 0, 200, 0.1), rgba(0, 0, 255, 0.2));")
                  
)

(defwindow shortcuts
           :monitor 0
           :geometry (geometry :x "-10px"
                               :y "688px"
                               :width "100px"
                               :height "70px"
                               :anchor "top right")
           :stacking "fg"
           :windowtype "desktop"
           (label :markup "${sxhkd_shortcuts}"
                  :style "color:skyblue;font-weight:bold;font-family:monospace;font-size:15px;padding:10px;border-left:0px solid purple;background:linear-gradient(-135deg, rgba(100, 0, 200, 0.1), rgba(0, 0, 255, 0.2));")
                  
)

(defwindow clock-initial
           :monitor 0
           :geometry (geometry :x "-10px"
                               :y "-10px"
                               :width "100px"
                               :height "70px"
                               :anchor "bottom right")
           :stacking "fg"
           :windowtype "desktop"
           (digital_clock))
